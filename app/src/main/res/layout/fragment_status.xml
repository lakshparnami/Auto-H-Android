<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lucifer.auto_h.tabs.ControlFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electricity"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="#22000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/light_1_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/light_1_bulb"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/action_logout"
                        android:src="@drawable/ic_lightbulb_gray" />

                    <TextView
                        android:id="@+id/text_light_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/light_1_switch"
                        android:layout_alignBottom="@+id/light_1_switch"
                        android:layout_toEndOf="@+id/light_1_bulb"
                        android:text="Light 1" />

                    <ToggleButton
                        android:id="@+id/light_1_switch"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/circle4"
                        android:checked="true"
                        android:textColor="#0fff" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/light_2_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/light_2_bulb"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_lightbulb_gray" />

                    <TextView
                        android:id="@+id/text_light_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/light_2_bulb"
                        android:text="Light 2" />

                    <ToggleButton
                        android:id="@+id/light_2_switch"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/circle4"
                        android:src="@drawable/circle"
                        android:textColor="#0fff"
                        android:tint="#4000" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/light_3_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/light_3_bulb"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_lightbulb_gray" />

                    <TextView
                        android:id="@+id/text_light_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/light_3_bulb"
                        android:text="Light 3" />

                    <ToggleButton
                        android:id="@+id/light_3_switch"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/circle4"
                        android:src="@drawable/circle"
                        android:textColor="#0fff"
                        android:tint="#4000" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fan_1_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/fan_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_lightbulb_gray" />

                    <TextView
                        android:id="@+id/text_fan_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/fan_1"
                        android:text="Fan 1" />

                    <ToggleButton
                        android:id="@+id/fan_1_switch"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/circle4"
                        android:src="@drawable/circle"
                        android:textColor="#0fff"
                        android:tint="#4000" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fan_2_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/fan_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_lightbulb_gray" />

                    <TextView
                        android:id="@+id/text_fan_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/fan_2"
                        android:text="Fan 2" />

                    <ToggleButton
                        android:id="@+id/fan_2_switch"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/circle4"
                        android:src="@drawable/circle"
                        android:textColor="#0fff"
                        android:tint="#4000" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="#22000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Others"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="#22000000" />

            <RelativeLayout
                android:id="@+id/switchDoorLayoutIndividual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/door"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_lock_outline_black" />

                <TextView
                    android:id="@+id/textDoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/door"
                    android:text="Main Gate Status" />

                <ToggleButton
                    android:id="@+id/myDoorSwitch"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/circle4"
                    android:src="@drawable/circle"
                    android:textColor="#0fff"
                    android:tint="#4000" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/switchgarageDoorLayoutIndividual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/garagedoor"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_lock_outline_black" />

                <TextView
                    android:id="@+id/textgarageDoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/garagedoor"
                    android:text="Garage Status" />

                <ToggleButton
                    android:id="@+id/mygarageDoorSwitch"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/circle4"
                    android:src="@drawable/circle"
                    android:textColor="#0fff"
                    android:tint="#4000" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="#22000000" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
